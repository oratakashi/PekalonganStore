<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/radius_8"
    style="@style/AppBottomSheetDialogTheme"
    tools:context="id.oratakashi.pekalonganstore.ui.region.SubdistrictFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:paddingStart="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_10"
        android:orientation="vertical">
        <View
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_3"
            android:background="@color/line"
            android:layout_gravity="center_horizontal"/>
        <View
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_3"
            android:background="@color/line"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_search_subdistrict"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/font_18"/>
        <com.ndroid.CoolEditText
            android:id="@+id/etSearch"
            style="@style/coolEditText"
            android:hint="@string/title_search_subdistrict"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:drawableStart="@drawable/ic_search_grey"
            android:drawablePadding="@dimen/padding_5"
            android:layout_marginTop="@dimen/margin_10"/>
        <LinearLayout
            android:id="@+id/llBlank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150"
                android:layout_marginTop="@dimen/margin_40"
                android:src="@drawable/ic_location_search"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_command_search_district"
                android:textAlignment="center"
                android:fontFamily="@string/register_now"
                android:layout_marginTop="@dimen/margin_20"
                android:textSize="@dimen/font_14"
                android:layout_marginBottom="@dimen/margin_100"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150"
                android:layout_marginTop="@dimen/margin_40"
                android:src="@drawable/ic_empty"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_comment_no_subdistrict"
                android:textAlignment="center"
                android:fontFamily="@string/register_now"
                android:layout_marginTop="@dimen/margin_20"
                android:textSize="@dimen/font_14"
                android:layout_marginBottom="@dimen/margin_100"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llError"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/size_64"
                android:layout_height="@dimen/size_64"
                android:src="@drawable/ic_warning"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_failed_get_data"
                android:fontFamily="@font/bold"
                android:textAlignment="center"
                android:textSize="@dimen/font_18"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_unstable_network"
                android:fontFamily="@font/regular"
                android:textAlignment="center"
                android:textSize="@dimen/font_12"/>
            <Button
                android:id="@+id/btnRetry"
                style="@style/buttonPrimaryWrapContent"
                android:text="@string/title_retry"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRegion"
            android:layout_marginTop="@dimen/margin_10"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_18"
                        android:layout_marginEnd="100dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="230dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="190dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="250dp"
                        android:background="@color/placeholder_bg" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_20">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_18"
                        android:layout_marginEnd="100dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="230dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="190dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="250dp"
                        android:background="@color/placeholder_bg" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_20">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_18"
                        android:layout_marginEnd="100dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="230dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="190dp"
                        android:background="@color/placeholder_bg" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_12"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="250dp"
                        android:background="@color/placeholder_bg" />
                </LinearLayout>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
