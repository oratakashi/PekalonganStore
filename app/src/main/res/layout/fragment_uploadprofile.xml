<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/radius_8"
    style="@style/AppBottomSheetDialogTheme"
    tools:context="id.oratakashi.pekalonganstore.ui.dialog.upload_profile.UploadProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:paddingStart="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_10"
        android:orientation="vertical">
        <View
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_3"
            android:background="@color/line"
            android:layout_gravity="center_horizontal"/>
        <View
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_3"
            android:background="@color/line"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_photo_profile"
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_18"
            android:layout_marginTop="@dimen/margin_10"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginTop="@dimen/margin_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_50"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/llGalery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/size_54"
                    android:layout_height="@dimen/size_54"
                    android:src="@drawable/ic_galery"
                    android:background="@drawable/badge_accent_background"
                    android:padding="@dimen/margin_15"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_gallery"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_8"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/size_54"
                    android:layout_height="@dimen/size_54"
                    android:src="@drawable/ic_camera"
                    android:background="@drawable/badge_accent_background"
                    android:padding="@dimen/margin_15"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_camera"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_8"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/size_54"
                    android:layout_height="@dimen/size_54"
                    android:src="@drawable/ic_delete"
                    android:background="@drawable/badge_background"
                    android:padding="@dimen/margin_15"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_delete_photo"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="@dimen/margin_8"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView >
